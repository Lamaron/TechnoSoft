<Window x:Class="UI.RepairRequestListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список заявок" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📋 Список заявок на обслуживание" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"
                   Foreground="#2c3e50"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
            <TextBox Name="txtSearch" Width="200" Height="25" Margin="0,0,10,0"
                     Padding="5" ToolTip="Поиск по номеру, клиенту или оборудованию"
                     TextChanged="TxtSearch_TextChanged"/>

            <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="10,0,5,0" FontWeight="SemiBold"/>
            <ComboBox Name="cmbStatusFilter" Width="150" Height="25" Margin="0,0,10,0"
                      SelectionChanged="CmbStatusFilter_SelectionChanged">
                <ComboBoxItem Content="Все статусы" IsSelected="True"/>
                <ComboBoxItem Content="Новая заявка"/>
                <ComboBoxItem Content="В процессе ремонта"/>
                <ComboBoxItem Content="Ожидание запчастей"/>
                <ComboBoxItem Content="Завершена"/>
            </ComboBox>

            <Button Content="🔍 Поиск" Width="80" Height="25" Margin="0,0,10,0"
                    Click="BtnSearch_Click"/>
            <Button Content="🔄 Обновить" Width="80" Height="25"
                    Click="BtnRefresh_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="➕ Новая заявка" Width="120" Height="30" Margin="0,0,10,0"
                    Background="#27ae60" Foreground="White" FontWeight="SemiBold"
                    Click="BtnCreateNewRequest_Click"/>
            <Button Content="✏️ Редактировать" Name="btnEdit" Width="120" Height="30" Margin="0,0,10,0"
                    Background="#3498db" Foreground="White" FontWeight="SemiBold"
                    Click="BtnEditRequest_Click"/>
            <Button Content="🗑️ Удалить" Name="btnDelete" Width="100" Height="30" Margin="0,0,10,0"
                    Background="#e74c3c" Foreground="White" FontWeight="SemiBold"
                    Click="BtnDeleteRequest_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="3" Name="dgRequests" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionMode="Single"
                  SelectionChanged="DgRequests_SelectionChanged"
                  MouseDoubleClick="DgRequests_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding Number}" Width="60"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="80"/>
                <DataGridTextColumn Header="Оборудование" Binding="{Binding EquipmentType}" Width="120"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding EquipmentModel}" Width="120"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding ClientFullName}" Width="150"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding ClientPhone}" Width="110"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="5,2"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Новая заявка">
                                    <Setter Property="Background" Value="#ffeaa7"/>
                                    <Setter Property="Foreground" Value="#2d3436"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="В процессе ремонта">
                                    <Setter Property="Background" Value="#74b9ff"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Ожидание запчастей">
                                    <Setter Property="Background" Value="#fdcb6e"/>
                                    <Setter Property="Foreground" Value="#2d3436"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Завершена">
                                    <Setter Property="Background" Value="#00b894"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Инженер" Binding="{Binding Engineer}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="4" Background="#34495e">
            <StatusBarItem>
                <TextBlock Name="txtStatus" Foreground="White" Text="Готово"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="txtRecordCount" Foreground="White" Text="Записей: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>