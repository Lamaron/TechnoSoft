<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учет заявок на обслуживание IT-оборудования" 
        Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            
            <TextBlock Text="Главная страница" 
                       FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#2c3e50"/>
        </StackPanel>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="📋 Список заявок" Name="BtnListRequests"
                    Width="300" Height="55" Margin="0,12"
                    FontSize="18" Background="#3498db" Foreground="White"
                    Click="BtnListRequests_Click"
                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"/>

            <Button Content="➕ Добавить заявку" Name="BtnAddRequest"
                    Width="300" Height="55" Margin="0,12"
                    FontSize="18" Background="#27ae60" Foreground="White"
                    Click="BtnAddRequest_Click"
                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"/>

            <Button Content="📊 Статистика" Name="BtnStatistics"
                    Width="300" Height="55" Margin="0,12"
                    FontSize="18" Background="#e67e22" Foreground="White"
                    Click="BtnStatistics_Click"
                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="#34495e" Padding="15,10" CornerRadius="5">
            <Grid>
                <TextBlock Text="Система управления заявками" 
                           Foreground="White" HorizontalAlignment="Center"
                           VerticalAlignment="Center" FontSize="14"/>

            </Grid>
        </Border>
    </Grid>
</Window>