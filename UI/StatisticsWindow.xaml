<Window x:Class="UI.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика работы отдела обслуживания" Height="700" Width="900"
        xmlns:oxy="http://oxyplot.org/wpf"  
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="📊 Статистика работы отдела обслуживания" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,20"
                       Foreground="#2c3e50" HorizontalAlignment="Center"/>

            <GroupBox Grid.Row="1" Header="🔍 Фильтры" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Период с:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker Name="dpStartDate" Width="120" Margin="0,0,15,0"/>

                    <TextBlock Text="по:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <DatePicker Name="dpEndDate" Width="120" Margin="0,0,15,0"/>

                    <Button Content="Применить фильтр" Width="120" Height="30"
                            Click="BtnApplyFilter_Click"/>
                    <Button Content="Сбросить" Width="80" Height="30" Margin="10,0,0,0"
                            Click="BtnResetFilter_Click"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="2" Header="📈 Общая статистика" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#3498db" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Всего заявок" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtTotalRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#27ae60" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Выполнено" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtCompletedRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#e67e22" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="В работе" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtInProgressRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Background="#e74c3c" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Новых" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtNewRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>

            <TabControl Grid.Row="3" Margin="0,0,0,15">
                <TabItem Header="📊 По статусам">
                    <oxy:PlotView Name="plotStatus" Margin="10"/>
                </TabItem>

                <TabItem Header="📈 По месяцам">
                    <oxy:PlotView Name="plotMonth" Margin="10"/>
                </TabItem>

                <TabItem Header="👨‍💼 По инженерам">
                    <oxy:PlotView Name="plotEngineer" Margin="10"/>
                </TabItem>

                <TabItem Header="🖥️ По оборудованию">
                    <oxy:PlotView Name="plotEquipment" Margin="10"/>
                </TabItem>
            </TabControl>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🔄 Обновить статистику" Width="150" Height="35" Margin="0,0,10,0"
                        Background="#3498db" Foreground="White" FontWeight="SemiBold"
                        Click="BtnRefreshStats_Click"/>
                
                <Button Content="❌ Закрыть" Width="100" Height="35"
                        Background="#95a5a6" Foreground="White" FontWeight="SemiBold"
                        Click="BtnClose_Click"/>
            </StackPanel>
            
            

        </Grid>
    </ScrollViewer>
</Window>