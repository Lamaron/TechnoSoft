<Window x:Class="UI.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика работы отдела обслуживания" Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="📊 Статистика работы отдела обслуживания" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,20"
                       Foreground="#2c3e50" HorizontalAlignment="Center"/>

            <GroupBox Grid.Row="1" Header="📈 Общая статистика" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#3498db" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Всего заявок" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtTotalRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#27ae60" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Выполнено" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtCompletedRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#e67e22" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="В работе" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtInProgressRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Background="#e74c3c" Margin="5" Padding="10" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Новых" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Name="txtNewRequests" FontSize="24" Foreground="White" 
                                      HorizontalAlignment="Center" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="2" Header="🖥️ Статистика по типам оборудования" Margin="0,0,0,15">
                <DataGrid Name="dgEquipmentStats" AutoGenerateColumns="False" 
                         IsReadOnly="True" Height="200" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Тип оборудования" Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Value}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#2c3e50"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Процент" Binding="{Binding Percentage}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#27ae60"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Grid.Row="3" Header="📋 Статистика по статусам" Margin="0,0,0,15">
                <DataGrid Name="dgStatusStats" AutoGenerateColumns="False" 
                         IsReadOnly="True" Height="200" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Value}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Процент" Binding="{Binding Percentage}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#e67e22"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <GroupBox Grid.Row="4" Header="👨‍💼 Статистика по инженерам" Margin="0,0,0,15">
                <DataGrid Name="dgEngineerStats" AutoGenerateColumns="False" 
                         IsReadOnly="True" Height="200" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Инженер" Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="Заявок" Binding="{Binding Value}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Выполнено" Binding="{Binding Completed}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#27ae60"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🔄 Обновить статистику" Width="150" Height="35" Margin="0,0,10,0"
                        Background="#3498db" Foreground="White" FontWeight="SemiBold"
                        Click="BtnRefreshStats_Click"/>
                <Button Content="📊 Экспорт в PDF" Width="120" Height="35" Margin="0,0,10,0"
                        Background="#9b59b6" Foreground="White" FontWeight="SemiBold"
                        Click="BtnExportToPdf_Click"/>
                <Button Content="❌ Закрыть" Width="100" Height="35"
                        Background="#95a5a6" Foreground="White" FontWeight="SemiBold"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>